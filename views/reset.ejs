<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div
      class="d-flex justify-content-center align-items-center bg-light px-4"
      style="height: 100vh"
    >
      <div class="bg-white p-4 p-md-5 rounded shadow">
        <div class="row">
          <div class="col-12">
            <div class="text-center mb-5">
              <a href="#!">
                <img
                  src="/assets/logo.png"
                  alt="BootstrapBrain Logo"
                  width="15%"
                />
              </a>
            </div>
          </div>
        </div>
        <form id="loginForm">
          <div class="row gy-3 gy-md-4 overflow-hidden">
            <div class="col-12">
              <label for="email" class="form-label"
                >Email <span class="text-danger">*</span></label
              >
              <div class="input-group">
                <input
                  type="email"
                  class="form-control"
                  name="email"
                  id="email"
                  placeholder="Masukkan Email Anda"
                  required
                />
              </div>
            </div>
            <div class="col-12">
              <label for="token" class="form-label"
                >Token <span class="text-danger">*</span></label
              >
              <div class="input-group">
                <input
                  type="text"
                  class="form-control"
                  name="token"
                  id="token"
                  placeholder="Masukkan Token Anda"
                  required
                />
                <button id="btnRequestToken" class="btn btn-success">
                  request token
                </button>
              </div>
            </div>
            <div class="col-12">
              <label for="password" class="form-label"
                >Password <span class="text-danger">*</span></label
              >
              <div class="input-group">
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  id="password"
                  placeholder="Masukkan Password Anda"
                  required
                />
              </div>
            </div>
          </div>
        </form>
        <div class="d-grid">
          <button id="btnReset" class="btn btn-success btn-lg mt-4">
            Submit
          </button>
        </div>
      </div>
    </div>

    <!-- Modal -->
    <div
      class="modal fade"
      id="myModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div id="modalHeader" class="modal-header bg-success">
            <h1 class="modal-title fs-5 text-white" id="modalTitle">
              Modal title
            </h1>
          </div>
          <div class="modal-body"><p id="modalBody"></p></div>
          <div class="modal-footer">
            <button
              id="btnClose"
              type="button"
              class="btn btn-danger w-100"
              data-bs-dismiss="modal"
            >
              Tutup
            </button>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/js/reset.js"></script>
  </body>
</html>

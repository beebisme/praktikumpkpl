<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/css/admin.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-dark bg-success ps-4">
        <div class="container-fluid">
          <span class="navbar-brand mb-0 h1"
            ><img
              src="/assets/logo.png"
              alt=""
              style="height: 3rem; margin-right: 1rem"
            />DLHKP Kota Kediri</span
          >
          <span class="navbar-brand mb-0 h1">
            <div class="btn-group">
              <button
                type="button"
                class="btn btn-success"
                data-bs-toggle="dropdown"
                data-bs-display="static"
                aria-expanded="false"
              >
                <img src="/assets/user.svg" alt="" style="height: 36px" />
              </button>
              <ul
                class="dropdown-menu dropdown-menu-end dropdown-menu-start px-2"
              >
                <button id="btnLogout" class="btn btn-danger w-100">
                  Keluar
                </button>
              </ul>
            </div>
          </span>
        </div>
      </nav>
    </header>

    <div class="mt-4 px-4">
      <button id="btnSemua" class="btn btn-primary">Semua</button>
      <button id="btnPending" class="btn btn-warning">Pending</button>
      <button id="btnDisetujui" class="btn btn-success">Disetujui</button>
      <button id="btnDitolak" class="btn btn-danger">Ditolak</button>
    </div>

    <div class="container-fluid mt-4">
      <div class="table-responsive px-4">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col" class="bg-success text-white">Nama</th>
              <th scope="col" class="bg-success text-white">Alamat</th>
              <th scope="col" class="bg-success text-white">Telepon</th>
              <th scope="col" class="bg-success text-white">Jenis Pohon</th>
              <th scope="col" class="bg-success text-white">Jumlah</th>
              <th scope="col" class="bg-success text-white">Diameter (cm)</th>
              <th scope="col" class="bg-success text-white">Lokasi</th>
              <th scope="col" class="bg-success text-white">Alasan</th>
              <th scope="col" class="bg-success text-white">
                Foto KTP & Pohon
              </th>
              <th scope="col" class="bg-success text-white">Aksi</th>
              <th scope="col" class="bg-success text-white">Status</th>
            </tr>
          </thead>
          <tbody id="tableBody"></tbody>
        </table>
      </div>
    </div>

    <!-- Modal -->
    <div
      class="modal fade"
      id="myModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div id="modalHeader" class="modal-header bg-success">
            <h1 class="modal-title fs-5 text-white" id="modalTitle">
              Modal title
            </h1>
          </div>
          <div id="modalBody" class="modal-body"></div>
          <div class="modal-footer">
            <button
              id="btnClose"
              type="button"
              class="btn btn-danger w-100"
              data-bs-dismiss="modal"
            >
              Tutup
            </button>
          </div>
        </div>
      </div>
    </div>
    <script src="https://unpkg.com/pdf-lib/dist/pdf-lib.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/js/admin.js"></script>
  </body>
</html>
